@using MyProject.Models.MyProject
@model ArticleListModel

@{
    var cards = Model.ArticleCards
        .OrderByDescending(x => x.Date)
        .Take(2)
        .ToList();

    var firstCard = cards.FirstOrDefault();
    var lastCard = cards.LastOrDefault();
}

<div class="row card-deck mb-3">
    <div class="col-1"></div>
    @await Html.PartialAsync("Components/MyProject/ArticleCard", firstCard)    
    <div class="col-3"></div>
    @await Html.PartialAsync("Components/MyProject/ArticleCard", lastCard)
    <div class="col-1"></div>
</div>
